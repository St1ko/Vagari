<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkPurple">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/logoLogin"
        android:src="@drawable/iconvagari"
        android:adjustViewBounds="true"
        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VAGARI"
        android:textSize="22dp"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:layout_below="@+id/logoLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:background="@color/white"
        android:hint="@string/Email"
        android:textColorHint="@color/grey"
        android:padding="14dp"
        android:id="@+id/userinput"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/passwordinput" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:background="@color/white"
        android:hint="@string/Password"
        android:textColorHint="@color/grey"
        android:fontFamily="sans-serif"
        android:padding="14dp"
        android:id="@+id/passwordinput"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userinput"
        android:layout_marginTop="7dp"
        />

    <Button
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:background="#cccccc"
        android:text="Register"
        android:id="@+id/registerButton"
        android:layout_below="@+id/passwordinput"
        android:layout_alignStart="@+id/passwordinput"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:background="@color/lightplum"
        android:text="Login"
        android:id="@+id/loginButton"
        android:layout_below="@+id/passwordinput"
        android:layout_alignEnd="@+id/passwordinput"
        android:layout_marginTop="8dp"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/darkPurple"
            android:id="@+id/view2" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/close"
            android:background="@color/darkPurple"
            android:id="@+id/closeButton"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/bUpload">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Upload"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/preview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/view"
            android:src="@mipmap/iconvagarismall"/>

        <View
            android:id="@+id/view"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/preview"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="#9e9e9e" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="Add Location"
            android:textColorHint="#000000"
            android:fontFamily="sans-serif"
            android:paddingStart="30dp"
            android:id="@+id/LocationInput"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/view"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/iconpin"
            android:background="@color/white"
            android:layout_alignStart="@id/LocationInput"
            android:layout_below="@id/view"
            android:layout_marginTop="12dp"
            android:layout_marginStart="5dp"/>

        <View
            android:id="@+id/view3"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/LocationInput"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:background="#9e9e9e" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:inputType="date"
            android:hint="Add Date"
            android:textColorHint="#000000"
            android:fontFamily="sans-serif"
            android:paddingStart="30dp"
            android:id="@+id/DateInput"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view3"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/iconcalendar"
            android:background="@color/white"
            android:layout_alignStart="@id/DateInput"
            android:layout_below="@id/view3"
            android:layout_marginTop="12dp"
            android:layout_marginStart="5dp"/>

        <View
            android:id="@+id/view4"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/DateInput"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:background="#9e9e9e" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@id/view4"
            android:layout_below="@id/view4"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/iconalbum"
            android:background="@color/white"
            android:layout_alignStart="@id/view4"
            android:layout_below="@id/view4"
            android:layout_marginTop="12dp"
            android:layout_marginStart="5dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/view5"/>

        <Button
            android:id="@+id/bFiles"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/view5"
            android:text="BROWSE FILES" />


        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/view5"
            android:layout_centerHorizontal="true"
            android:background="#000000" />

        <Button
            android:id="@+id/bCamera"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/view5"
            android:text="CAMERA" />


    </RelativeLayout>
</LinearLayout>